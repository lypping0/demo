<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hnist.ssm.qqzone.dao.ReplyDAO">
    <select id="getReplyList" parameterType="int" resultType="Reply">
    select t1.*,t2.nickName from t_reply t1 inner join t_user t2 on t1.userId=t2.id where topic_id=#{value}
    </select>
    <insert id="addReply" parameterType="Reply">
      insert into t_reply value(null,#{content},#{replyDate},#{userId},#{topicId})
    </insert>
    <delete id="delReply" parameterType="int">
     delete from t_reply where id=#{value}
    </delete>
    <select id="getReplyCount" parameterType="int" resultType="int">
     select count(*) from t_reply where topic_id=#{value}
    </select>
</mapper>
